@page
@model CartModel

<h2>Shopping Cart</h2>
@if (Model?.Cart?.CartItems.Count() == 0)
{
    <div class="alert alert-warning">Product not found!</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Quantity</th>
            <th>Item</th>
            <th>Price</th>
            <th>Total</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
   
        @foreach (var item in Model?.Cart?.CartItems ?? Enumerable.Empty<CartItem>())
        {
            <tr>
                <td>@item.Quantity</td>
                <td>@item.Product.Name</td>
                <td>@item.Product.Price</td>
                <td>
                    @((item.Quantity * item.Product.Price).ToString()) $
                </td>
                <td>
                    <form method="post" asp-page-handler="Remove">
                        <input type="hidden" name="Id" value="@item.Product.Id">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
        }
   
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>
                @Model?.Cart?.GetTotal()
            </td>
        </tr>
        </tfoot>
    </table>
}


<div>
    <a class="btn btn-primary" href="/">Back to Menu</a>
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Finish the order</a>
</div>