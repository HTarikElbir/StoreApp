@model ProductListViewModel

<div class="row">
    <div class="col-md-3">
        Categories
    </div>
    <div class="col-md-9">
        @if(Model.Products.Count() == 0)
        {
            <p>Product is not found!</p>
        }
        @foreach (var product in Model.Products)
        {
            <div class="card card-outline-secondary mb-2 p-2">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@product.Name</h4>
                        <p>@product.Description</p>
                    </div>
                    <div>
                        <span class="badge rounded-pill text-bg-success">@product.Price $</span>
                    </div>
                </div>
            </div>
        }
        <div 
            page-model="@Model.PageInfo"
            page-action="Index"
            page-class="btn"
            page-class-link="btn-outline-secondary"
            page-class-active="btn-secondary"
            class="btn-group"></div>
    </div>
   
</div>

